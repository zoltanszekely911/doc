<Window x:Class="WalkOfProductLibrary.DialogusKiertekeloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:s="clr-namespace:System;assembly=mscorlib" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ef="clr-namespace:WalkOfProduct.EntityModel;assembly=EntityModelLibrary"
        xmlns:local="clr-namespace:WalkOfProductLibrary"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mwt="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        mc:Ignorable="d" 
        Title="Dialógus kiértékelő" Height="600" Width="900" WindowStartupLocation="CenterScreen"  Loaded="Window_Loaded" >

    <Window.Resources>
        <CollectionViewSource x:Key="KerdesekCVS" Source="{Binding Path=Kerdesek, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}}" />
        <DataTemplate DataType="{x:Type ef:KerdoIv}">
            <TextBlock Text="{Binding Kerdes}" />
        </DataTemplate>
        <local:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter" />
    </Window.Resources>

    <xceed:BusyIndicator x:Name="BusiIndicator" BusyContent="Adatok betöltése ..." IsBusy="False">
        <Grid Margin="5,5,5,0">
            <Grid.Background>
                <ImageBrush ImageSource="/WalkOfProductLibrary;component/Images/logo_transparent.png" Stretch="None" Opacity="0.1"  >
                </ImageBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Grid.Row="0"  Orientation="Horizontal">
                    <TextBlock Text="Kérdés választó:" VerticalAlignment="Center" Margin="0,0,20,0" />
                    <ComboBox x:Name="KerdesValaszto" MinWidth="200" ItemsSource="{Binding Source={StaticResource KerdesekCVS}}" SelectedValuePath="Id"  SelectedValue="{Binding KivalasztottKerdes.Id, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" DisplayMemberPath="Kerdes" SelectionChanged="KerdesValaszto_SelectionChanged" />
                    <Label  />
                </StackPanel>
            </Grid>

            <GroupBox Grid.Row="1"  Header="Válaszok" Margin="0,5,5,0">
                <ListBox x:Name="ValaszokListBox" BorderThickness="0" ItemsSource="{Binding Path=FelhasznaloValaszokKiertekeles, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}}" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.Effect>
                        <DropShadowEffect ShadowDepth="5" Direction="320" Color="LightGray" Opacity="0.5"/>
                    </ListBox.Effect>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="80" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="ValaszBorder" Grid.Column="0" Height="80" BorderBrush="#FFE7E7E7" BorderThickness="1" CornerRadius="3" Width="400"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Valasz}" FontSize="18" TextWrapping="Wrap" />
                                </Border>
                                <Border x:Name="SzazalekosEloszlasBorder" Grid.Column="1" Height="80" Width="420" BorderBrush="#FFE7E7E7" BorderThickness="1" CornerRadius="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <StackPanel Height="50">
                                        <DockPanel>
                                            <Label Content="Szavazatok száma:" FontSize="14" />
                                            <TextBlock FontWeight="SemiBold" Height="18" Text="{Binding SzavazatokSzama}" FontSize="14"/>
                                            <Label Content="Eloszlás:" FontSize="14" Margin="15,0,0,0" />
                                            <TextBlock FontWeight="SemiBold" Height="18" Text="{Binding Szazalek, StringFormat={}{0}%}" FontSize="14"/>
                                        </DockPanel>
                                        <ProgressBar Value="{Binding Szazalek}" Maximum="100" Height="25" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>

            <DockPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,15,10,0">
                <Button x:Name="MegsemButton" FontSize="18" Grid.Row="2" Width="120" Height="35" BorderBrush="Black" BorderThickness="1" Background="LightGray" Foreground="Black" Click="Megsem_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/WalkOfProduct;component/Images/button_cancel.png" Stretch="Uniform" Width="18"/>
                        <TextBlock Text="Mégsem" Margin="7,0,0,0"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"></Setter>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" />
                    </Button.Effect>
                </Button>
                <Button x:Name="MasolasButton"  FontSize="18" Grid.Row="2" Width="120" Height="35" Margin="150,0,0,0" Click="Masolas_Click" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/WalkOfProductLibrary;component/Images/copy.png" Stretch="Uniform" Width="18"/>
                            <TextBlock Text="Másolas" Margin="7,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"></Setter>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" />
                    </Button.Effect>
                </Button>
                <Button x:Name="DeaktivalasButton"  FontSize="18" Grid.Row="2" Width="120" Height="35" Margin="150,0,0,0" Click="Deaktivalas_Click" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Deaktiválás" Margin="7,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"></Setter>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" />
                    </Button.Effect>
                </Button>
            </DockPanel>
        </Grid>
    </xceed:BusyIndicator>
</Window>
